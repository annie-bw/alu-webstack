#!/usr/bin/env bash
# Script that displays information about subdomains

# Function to audit a subdomain
audit_subdomain() {
    local domain=$1
    local subdomain=$2

    # Query DNS and extract record type and destination using awk
    # shellcheck disable=SC2086
    dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:' | tail -n1 | awk -v subdomain_name="$subdomain" '{print "The subdomain " subdomain_name " is a " $4 " record and points to " $5}'
}

# Main script logic
domain=$1
subdomain=$2

if [ -z "$subdomain" ]; then
    # If no subdomain specified, check default subdomains
    audit_subdomain "$domain" "www"
    audit_subdomain "$domain" "lb-01"
    audit_subdomain "$domain" "web-01"
    audit_subdomain "$domain" "web-02"
else
    # If subdomain specified, check only that subdomain
    audit_subdomain "$domain" "$subdomain"
fi
